@model LibraryManager.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MyLayout1.cshtml";
}

<h2>Edit</h2>
<link href="~/Content/ManagerStyle.css" rel="stylesheet" />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Category</legend>

        @Html.HiddenFor(model => model.CategoriesId)

        <div class="editor-label Heading">
            @Html.LabelFor(model => model.CategoriesName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoriesName)
            @Html.ValidationMessageFor(model => model.CategoriesName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
