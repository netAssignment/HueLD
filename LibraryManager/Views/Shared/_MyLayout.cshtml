                <div class="boxLeftDiv">
                    <div class="titleBoxDiv">Categories</div>
                    <div id="categoryList">
                        <ul>
                            <li>@Html.ActionLink("All","Index","MyHome")</li>
                            <li>@Html.ActionLink("Children books","ChildrenBooks","Categories")</li>
                            <li>@Html.ActionLink("Business books books","BusinessBooks","Categories")</li>
